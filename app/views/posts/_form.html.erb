<%= form_for @post do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.submit "Save", class: "btn btn-primary btn-lg btn-block" %>
  </div>

  <%= f.collection_check_boxes( :tag_ids, Tag.all, :id, :name) %><br/>

  <%= f.collection_radio_buttons( :category_id, Category.all, :id, :name) %><br/>

  <%= f.collection_select( :category_id, Category.all, :id, :name) %>
  <%= select_tag( :category_id, options_for_select( @category_options ) ) %><br />

    <%= f.collection_select( :tag_ids, Tag.all, :id, :name, {}, multiple: true) %>

<% end %>


</div>
